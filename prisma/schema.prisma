generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  email           String   @unique
  password        String
  username        String
  penName         String
  profilePicture  String
  bio             String
  DOB             DateTime
  location        String
  gender          String
  languages       String[]
  favouriteQuotes String[]
  poems           Poem[]   @relation("Poems")
}

model Poem {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  title       String
  description String?
  content     String
  author      User     @relation(references: [id], fields: [authorId], "Poems")
  authorId    String   @db.ObjectId
}
